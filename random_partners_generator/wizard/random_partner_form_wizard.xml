<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_random_partner_form" model="ir.ui.view">
        <field name="name">random.partner.form</field>
        <field name="model">random.partner</field>
        <field name="arch" type="xml">
            <form string="Random Partner Generate">
                <group>
                    <field name="size"/>
                    <field name="partner_type"/>
                </group>
                <footer>
                    <button string='Generate' name="generate_partners" type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_random_partner" model="ir.actions.act_window">
        <field name="name">Random Partner</field>
        <field name="res_model">random.partner</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_random_partner_form"/>
        <field name="target">new</field>
    </record>
</odoo>